<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pictureProductImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleProductTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="@dimen/itemTextSize"
        app:layout_constraintStart_toEndOf="@id/pictureProductImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название товара" />

    <TextView
        android:id="@+id/priceProductTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="@dimen/itemTextSize"
        app:layout_constraintStart_toEndOf="@id/pictureProductImageView"
        app:layout_constraintTop_toBottomOf="@id/titleProductTextView"
        tools:text="1234.00 рублей" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="@dimen/itemTextSize"
        app:layout_constraintStart_toEndOf="@id/pictureProductImageView"
        app:layout_constraintTop_toBottomOf="@id/priceProductTextView"
        tools:text="Арт.№ 123456789" />

</androidx.constraintlayout.widget.ConstraintLayout>